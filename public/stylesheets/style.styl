@import 'nib'

global-reset()

header
  display flex
  justify-content center
  align-items center
  border solid 1px
  background cornflowerblue
  height 10vh

  h1
    font-size 2.25rem
    font-family "Helvetica Neue"

.presentacion
  font-size 1.2rem
  font-family "Helvetica Neue"
  padding 1rem  

.lista-posts
  border groove 1px
  background papayawhip
  padding 1rem 1rem

  h3
    font-size 1.50rem
    text-decoration italic

  p
    font-size 1.25rem

.posts
  padding 1rem 0
  border solid 1px
  margin 0.7rem 0
  box-shadow 5px 5px blue